<Window x:Class="What_to_Wear.Views.ActivateKey"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:What_to_Wear.Views"
        mc:Ignorable="d"
        Title="ActivateKey" Height="190" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel >
            <TextBlock Text="Enter API Key:" Margin="10" FontSize="20"/>
            <TextBox x:Name="Key" MinWidth="100" FontSize="20" Margin="10,10,10,20"/>
            <Button x:Name="Save" Width="80" Background="White" FontSize="20" Click="Save_Click">Save</Button>
        </StackPanel>
    </Grid>
</Window>
