<Window x:Class="What_to_Wear.Views.ActivateKey"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:What_to_Wear.Views"
        mc:Ignorable="d"
        Title="ActivateKey" Height="140" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="API Key eingeben:" Margin="10" FontSize="20"/>
        <TextBox x:Name="Key" MinWidth="100" FontSize="20" Margin="10,50,10,20"/>
    </Grid>
</Window>
